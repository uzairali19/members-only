<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "New Post", input_html: { class: "textarea"}, wrapper: false, label_html: {
      class: "label"
    },placeholder: "Enter a new post....", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
